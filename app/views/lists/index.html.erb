<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<% @lists.each do |list| %>
  <%= link_to list.name, list %>
  |
  <%= link_to "DELET", list, data: { confirm: 'Are you sure?' }, method: :delete %>
  <br>
<% end %>

<br>

<%= form_with model: @list do |f| %>
  <%= f.text_field :name, placeholder: "New list..." %>
  <%= f.submit "Create" %>
<% end %>
